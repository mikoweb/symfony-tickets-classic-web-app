{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "parser": "@babel/eslint-parser",
    "extends": [
        "eslint:recommended",
        "plugin:wc/recommended",
        "plugin:lit/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "no-async-promise-executor": "off",
        "no-prototype-builtins": "off"
    },
    "globals": {
        "describe": "readonly",
        "it": "readonly"
    }
}
