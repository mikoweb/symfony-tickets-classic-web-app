{% extends 'admin/layout.html.twig' %}

{% block content %}
    <section>
        <h3 class="h3 panel-title">Zgłoszenia</h3>
        <app-rwd-table wc-lazy>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Tytuł</th>
                        <th scope="col">Slug</th>
                        <th scope="col">Temat</th>
                        <th scope="col">Email</th>
                        <th scope="col">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ticket in pagination %}
                        <tr>
                            <th scope="row">
                                <a href="{{ path('app_admin_ticket_show', {'slug': ticket.slug}) }}">
                                    {{ ticket.id }}
                                </a>
                            </th>
                            <td>{{ ticket.title }}</td>
                            <td>{{ ticket.slug }}</td>
                            <td>{{ ticket.topic.name }}</td>
                            <td>{{ ticket.email }}</td>
                            <td>
                                <a href="{{ path('app_admin_ticket_show', {'slug': ticket.slug}) }}">
                                    <app-action-button icon="preview" class="button-table">
                                        Wyświetl
                                    </app-action-button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>
        </app-rwd-table>
        {{ knp_pagination_render(pagination) }}
    </section>
{% endblock %}
